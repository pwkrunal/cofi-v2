# Cofi Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=testDb

# SSE Configuration
# Poll interval in seconds (how often to check for new events)
# Lower = more real-time, higher = less database load
# Recommended:
#   2 seconds - Small batches (< 1000 files)
#   5 seconds - Large batches (10,000+ files) âœ… RECOMMENDED FOR YOUR USE CASE
#   10 seconds - Historical monitoring only
SSE_POLL_INTERVAL=5
