# GPU Mediators (comma-separated IPs)
GPU_MACHINES=192.168.1.10,192.168.1.11,192.168.1.12
MEDIATOR_PORT=5065

# Service Ports
IVR_PORT=4080
LID_PORT=4070
STT_PORT=4030
LLM1_PORT=7063
LLM2_PORT=7062

# Batch Config
CLIENT_VOLUME=/client_volume
BATCH_DATE=15-12-2024
CURRENT_BATCH=1

# Call Record Config
PROCESS_ID=1
CATEGORY_MAPPING_ID=1
AUDIO_ENDPOINT=http://localhost/audios

# Optional Stage (set to false to skip)
IVR_ENABLED=true
CALLMETADATA_ENABLED=true
TRADEMETADATA_ENABLED=true
RULE_ENGINE_ENABLED=true
LLM1_ENABLED=true
LLM2_ENABLED=true

# LLM2 Config
LLM2_SKIP_QUESTIONS=question_name_1,question_name_2
LLM2_NA_QUESTIONS=question_name_1,question_name_2

# STT Config
DIARIZATION=0

# Event Logging Config (for large batches 10,000+ files)
# Set LOG_FILE_START_EVENTS=false to reduce database writes by 50%
LOG_FILE_START_EVENTS=false
# Progress update frequency: 10 (frequent), 100 (balanced), 250 (minimal)
PROGRESS_UPDATE_INTERVAL=100

# NLP API Base URLs
NLP_API_Q1=http://localhost:7063
NLP_API_Q2=http://localhost:7062

# Wait Times (seconds)
IVR_WAIT=60
LID_WAIT=60
STT_WAIT=180
LLM_WAIT=300

# Container Names
IVR_CONTAINER=auditnex-ivr-1
LID_CONTAINER=auditnex-lid-1
STT_CONTAINER=auditnex-stt-inference-1
LLM1_CONTAINER=auditnex-llm-extraction-1
LLM2_CONTAINER=auditnex-llm-extraction-2

# API Endpoints (paths on GPU)
IVR_API_ENDPOINT=/file_ivr_clean
LID_API_ENDPOINT=/lid
STT_API_ENDPOINT=/stt
LLM_API_ENDPOINT=/extract_information

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=testDb

# External Audit Server Webhook
# URL of the external audit server for call status notifications
AUDIT_SERVER_URL=http://localhost:8000
